<h1 style="text-align: center"> Welcome to Freshcart</h1>
<% if current_user && current_user.admin %>
  <h3> Welcome admin, make changes you want!
    <h3>
    <% end %>
    <% if current_user && !current_user.admin %>
    <br>
      <h3>Products of Freshcart </h3>
      <%= form_tag(products_path, method: :get, class: "form-inline", role: 'search') do %>
        <div class="input-group">
          <%= text_field_tag :term, 
        params[:term], 
        id: 'products_search', 
        autocomplete: :off, 
        placeholder: 'Search', 
        class: 'form-control' %>
          <div class="input-group-btn search-panel">
            <%= link_to 'Clear', root_url, class: "btn btn-default" %>
            <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
      <br>
      <div class="col-md-6 col-md-offset-3">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Price</th>
              <% if current_user && current_user.admin %>
                <th>Action</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td>
                  <% if current_user && current_user.admin %>
                    <%= link_to "Edit", edit_product_path(product) %>
                    <%= link_to "Delete", product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% else %>
                    <%= form_for(@order_item, remote: true) do |f| %>
                      <%= f.hidden_field :product_id, value: product.id %>
                      <h5><%= product.price %></h5>
                      <div class="form-group">
                        <%= f.text_field :quantity, value: 1, min: 1, class: 'form-control' %>
                      </div>
                      <%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
